<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <div class="view" style="background-image: url('https://i.imgur.com/DfGvsCm.png'); background-repeat: no-repeat; background-size: cover; background-position: center center>
      <h1 class="text-center mb-3>
        <i class="fas fa-address-card"></i> Create an Account
      </h1>
      <% include ./partials/messages %>
      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="enter a name like, 'Grzegorz BrzÄ™czyszczykiewicz'"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email">example@example.com</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password">password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="create password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="password2">confirm password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="confirm password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <button type="submit" class="btn btn-success btn-block background-color: #8064A2">
          sign up
        </button>
      </form>
      <p class="lead mt-4">already have an account? <a href="/users/login">sign in</a></p>
    </div>
  </div>
</div>
